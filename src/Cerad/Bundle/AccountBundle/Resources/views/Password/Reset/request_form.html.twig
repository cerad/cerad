{% if passwordResetForm is defined %}
{% set form = passwordResetForm %}
<form 
    id     = "cerad_account_password_reset_request_form"
    class  = "cerad_account_password_reset_request_form cerad_common_form1" 
    action = "{{ path('cerad_account_password_reset_request') }}"
    method = "post"
    {{ form_enctype(form) }}
 >
    <fieldset><legend><span>Request Password Reset</span></legend>
        {{ form_row(form.username,{ 'label': 'User Name or Email'}) }}
    </fieldset>
    <fieldset>
        {% if form.vars.data.error %}
            <div style="color:red;">{{ form.vars.data.error }}</div>
        {% endif %}
        <div class="cerad_common_form_controls controls">
            <input type="submit" name="accountPasswordReset" value="Request Password Reset" />
        </div>
    </fieldset>
    <div style="display: none;">{{ form_rest(form) }}</div>
</form>
{% endif %}
