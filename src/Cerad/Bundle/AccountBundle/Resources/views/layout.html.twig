<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Account{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('bundles/ceradaccount/css/account.css') }}" media="all" />
</head>
<body>
    
<div class="fos_user_header">
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        {{ 'layout.logged_in_as'|trans({'%username%': app.user.name}, 'FOSUserBundle') }} |
        <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
    {% else %}
        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
    {% endif %}
</div>

{# for key, message in app.session.getFlashBag() %}
<div class="{{ key }}">
    {{ message|trans({}, 'FOSUserBundle') }}
</div>
{% endfor #}

<div class="fos_user_content">
{% block    fos_user_content %}
{% endblock fos_user_content %}
</div>

</body>
</html>
