{% extends '@CeradTourn/layout.html.twig' %}

{% block stylesheets %}
{{ parent() }}
  <link rel="stylesheet" href="{{ asset('bundles/ceradtourn/css/forms.css') }}" media="all" />
{% endblock %}
  
{% block content %}
<h3>Add person to account</h3>
<form 
    id     = "zayso_person_person_add_form"
    class  = "zayso_person_person_add zayso_form1" 
    action = "{{ path('cerad_tourn_person_person_add') }}" 
    method = "post" 
    {{ form_enctype(form) }}
 >
    <fieldset><legend><span>Role Information</span></legend>
        {{ form_row(form.role) }}
    </fieldset>
    <fieldset><legend><span>AYSO Information</span></legend>
        {{ form_row(form.aysoVolunteerId)  }}
        {{ form_row(form.aysoRegionId)     }}
        {{ form_row(form.aysoRefereeBadge) }}
    </fieldset>
    <fieldset><legend><span>Person Information</span></legend>
        {{ form_row(form.personFirstName) }}
        {{ form_row(form.personLastName)  }}
        {{ form_row(form.personNickName)  }}
        {{ form_row(form.personEmail)     }}
        {{ form_row(form.personPhone)     }}
    </fieldset>
    <fieldset>
        <div class="zayso_form_controls">
            <span></span>
            <input type="submit" name="personPersonAdd" value="Add Person" />
        </div>
    </fieldset>
<div style="display: none;">{{ form_rest(form) }}</div>
</form>
<p>
    After the person is added you will be returned to the Home page.  
    Please use the "Update your Plans" link to then set the plans for the person.
    
</p>
{# include('@CeradTourn/schedule/referee/search.html.twig') #}
{% endblock %}
